<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tex_day"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/menu_bar" android:text="年日"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comment"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"/>


        <ImageButton

            android:id="@+id/top_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle_outline_white_24dp"
            android:adjustViewBounds="false"/>

        <Space android:layout_width="0dp" android:layout_weight="2" android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/top_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visibility_off_white_24dp"/>

        <Space android:layout_width="0dp" android:layout_weight="2" android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/top_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_comment_white_24dp"/>

        <Space android:layout_width="0dp" android:layout_weight="2" android:layout_height="match_parent"/>


        <ImageButton
            android:id="@+id/top_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_help_outline_white_24dp"
        />

        <Space android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"/>


    </LinearLayout>

</LinearLayout>
