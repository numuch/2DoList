<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tb_system.todolist.MainActivity">


    <LinearLayout
        android:id="@+id/all_lists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <FrameLayout
            android:id="@+id/top_bar_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <FrameLayout
            android:id="@+id/pref_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />

        <FrameLayout
            android:id="@+id/recycle_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <FrameLayout
            android:id="@+id/once_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <FrameLayout
            android:id="@+id/task_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <FrameLayout
            android:id="@+id/clear_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
        <FrameLayout
            android:id="@+id/wait_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
        <FrameLayout
            android:id="@+id/dead_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
    </LinearLayout>



    <FrameLayout
        android:id="@+id/comment_area"
        android:layout_gravity="bottom|right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />


</FrameLayout>
